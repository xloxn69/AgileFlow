{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "echo '🚀 AgileFlow v2.19.0 loaded - Type /AgileFlow:help for commands'"
          },
          {
            "type": "command",
            "command": "echo '📁 Project: $(node scripts/get-env.js PROJECT_NAME \"Unnamed Project\")'"
          },
          {
            "type": "command",
            "command": "echo '👤 Developer: $(node scripts/get-env.js USER_NAME \"Developer\")'"
          },
          {
            "type": "command",
            "command": "if [ -d docs ]; then echo '✅ AgileFlow docs/ structure found'; else echo '⚠️  No docs/ structure - run /AgileFlow:setup-system'; fi"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": ".*create story.*",
        "hooks": [
          {
            "type": "command",
            "command": "echo '[LOG] Story creation detected at $(date)' >> .claude/activity.log"
          }
        ]
      },
      {
        "matcher": ".*epic.*",
        "hooks": [
          {
            "type": "command",
            "command": "echo '[LOG] Epic planning detected at $(date)' >> .claude/activity.log"
          }
        ]
      },
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "echo '[LOG] User prompt submitted at $(date)' >> .claude/prompt-history.log"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "echo '✅ Claude finished responding at $(date)'"
          },
          {
            "type": "command",
            "command": "echo '[LOG] Session ended at $(date)' >> .claude/session.log"
          }
        ]
      }
    ]
  }
}

{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'ðŸš€ AgileFlow v2.19.0 loaded - Type /agileflow:help for commands'"
          },
          {
            "type": "command",
            "command": "echo 'ðŸ“ Project: $(node scripts/get-env.js PROJECT_NAME \"Unnamed Project\")'"
          },
          {
            "type": "command",
            "command": "echo 'ðŸ‘¤ Developer: $(node scripts/get-env.js USER_NAME \"Developer\")'"
          },
          {
            "type": "command",

{
  "permissions": {
    "allow": [
      "Bash(npm run build:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(node scripts/agileflow-welcome.js:*)",
      "Bash(bash scripts/agileflow-statusline.sh:*)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node /home/coder/AgileFlow/.agileflow/scripts/damage-control-bash.js"
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "node /home/coder/AgileFlow/.agileflow/scripts/damage-control-edit.js"
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "node /home/coder/AgileFlow/.agileflow/scripts/damage-control-write.js"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node /home/coder/AgileFlow/.agileflow/scripts/agileflow-welcome.js"
          },
          {
            "type": "command",
            "command": "bash /home/coder/AgileFlow/.agileflow/scripts/archive-completed-stories.sh --quiet"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash /home/coder/AgileFlow/.agileflow/scripts/precompact-context.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node /home/coder/AgileFlow/.agileflow/scripts/ralph-loop.js 2>/dev/null || true"
          },
          {
            "type": "command",
            "command": "node /home/coder/AgileFlow/.agileflow/scripts/auto-self-improve.js 2>/dev/null || true"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash /home/coder/AgileFlow/.agileflow/scripts/agileflow-statusline.sh",
    "padding": 0
  }
}
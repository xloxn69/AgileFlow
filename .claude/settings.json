{
  "permissions": {
    "allow": [
      "Bash(npm run build:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(node scripts/agileflow-welcome.js:*)",
      "Bash(bash scripts/agileflow-statusline.sh:*)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "cd $(git rev-parse --show-toplevel) && node scripts/agileflow-welcome.js"
          },
          {
            "type": "command",
            "command": "cd $(git rev-parse --show-toplevel) && bash scripts/archive-completed-stories.sh --quiet"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "cd $(git rev-parse --show-toplevel) && bash scripts/precompact-context.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "cd $(git rev-parse --show-toplevel) && node scripts/ralph-loop.js 2>/dev/null || true"
          },
          {
            "type": "command",
            "command": "cd $(git rev-parse --show-toplevel) && node scripts/auto-self-improve.js 2>/dev/null || true"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "cd $(git rev-parse --show-toplevel) && bash scripts/agileflow-statusline.sh",
    "padding": 0
  }
}

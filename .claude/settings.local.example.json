{
  "$schema": "https://claude.ai/schemas/settings.json",
  "comment": "This is an example local settings file. Copy this to .claude/settings.local.json to customize.",
  "permissions": {
    "allow": [
      "Bash(npm run dev:*)",
      "Bash(npm run test:*)",
      "Bash(npm run lint:*)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "SessionStart": {
      "enabled": true,
      "command": "node scripts/get-env.js --json",
      "description": "Display environment info in JSON format",
      "runInBackground": false,
      "timeout": 5000
    },
    "BeforeCommit": {
      "enabled": false,
      "command": "npm run lint:all",
      "description": "Run linters before committing",
      "runInBackground": false,
      "timeout": 30000
    },
    "AfterCommit": {
      "enabled": false,
      "command": "echo 'Commit successful!'",
      "description": "Show success message after commit",
      "runInBackground": false,
      "timeout": 1000
    }
  },
  "preferences": {
    "autoSaveInterval": 5000,
    "theme": "auto",
    "notifications": {
      "enabled": true,
      "sound": false
    }
  },
  "customCommands": {
    "quick-test": {
      "command": "npm test",
      "description": "Run tests quickly"
    },
    "full-build": {
      "command": "npm run build:all",
      "description": "Build all workspaces"
    }
  }
}
